{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
    },
    "lib":[
      "es2015",
      "dom"
    ]
  },
  "include": ["src/**/*"]
}